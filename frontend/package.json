{
  "name": "fv-web-ui",
  "version": "0.1.0",
  "description": "A React.js Nuxeo front-end for the FirstVoices Dictionary.",
  "repository": "https://github.com/First-Peoples-Cultural-Council/fv-web-ui",
  "license": "Apache-2.0",
  "scripts": {
    "build": "gulp build:production",
    "build:production": "npm run production && npm run production:legacy",
    "cy:trashCopy": "npx trash cypress/integration/__cypress__/* !cypress/integration/__cypress__/__README__.js",
    "cy:copy": "npx copyfiles -e ./app/assets/javascripts/**/__cypress__/common/*.js ./app/assets/javascripts/**/__cypress__/*.js cypress/integration/__cypress__ -f",
    "cy:open": "npm run cy:trashCopy && npm run cy:copy && cypress open --browser chrome",
    "cy:run": "npm run cy:trashCopy && npm run cy:copy && cypress run --headless --browser chrome --record true --tag \"local\"",
    "cy:run:debug": "npm run cy:trashCopy && npm run cy:copy && DEBUG=cypress:* cypress run --headless --browser chrome --record false",
    "cy:run:ci:schedule": "npm run cy:trashCopy && npm run cy:copy && cypress run --headless --browser chrome --record true --tag \"master, schedule\"",
    "cy:run:ci:pr": "npm run cy:trashCopy && npm run cy:copy && cypress run --headless --browser chrome --record true --tag \"pull request\"",
    "development": "webpack --color --progress --mode development --config build/webpack.development.js",
    "initialSetup": "bash ../docker/initialsetup.sh",
    "lint-staged:eslint": "npx eslint --config .eslintrc --fix",
    "lint-staged:prettier": "npx prettier --config .prettierrc --write",
    "local:language:setup": "bash ./scripts/LocalDevLanguageSetup.sh",
    "local:language:teardown": "bash ./scripts/LocalDevLanguageTeardown.sh",
    "production": "webpack --color --progress --display-error-details --mode production --config build/webpack.production.js",
    "production:legacy": "webpack --color --progress --mode production --env.legacy --config build/webpack.production.js",
    "start": "webpack-dev-server --color --progress --mode development --config build/webpack.development.js",
    "startPreprod": "npm run start -- --env.NUXEO_URL=\"https://preprod.firstvoices.com/nuxeo/\"  --env.CONTEXT_PATH=\"\"",
    "startDev": "npm run start -- --env.NUXEO_URL=\"https://dev.firstvoices.com/nuxeo/\"  --env.CONTEXT_PATH=\"\"",
    "test": "jest",
    "test:update": "jest -u",
    "test:coverage": "jest --coverage",
    "test:databaseSetup:local": "bash ./scripts/TestDatabaseSetup.sh http://127.0.0.1:8080",
    "test:databaseTeardown:local": "bash ./scripts/TestDatabaseTeardown.sh http://127.0.0.1:8080",
    "test:e2e": "start-server-and-test startPreprod http://127.0.0.1:3001 cy:open",
    "test:e2e:local": "npm run test:databaseSetup:local && start-server-and-test start http://127.0.0.1:3001 cy:open",
    "test:e2e:local:headless": "npm run test:databaseSetup:local && start-server-and-test start http://127.0.0.1:3001 cy:run",
    "test:e2e:local:headless:debug": "npm run test:databaseSetup:local && start-server-and-test start http://127.0.0.1:3001 cy:run:debug",
    "test:e2e:ci:schedule": "npm run test:databaseSetup:local && start-server-and-test start http://127.0.0.1:3001 cy:run:ci:schedule",
    "test:e2e:ci:pr": "npm run test:databaseSetup:local && start-server-and-test start http://127.0.0.1:3001 cy:run:ci:pr",
    "test:watch": "jest --watch",
    "temp": "start-server-and-test start http://127.0.0.1:3001 cy:open"
  },
  "lint-staged": {
    "linters": {
      "*.{json,css,md}": [
        "npm run lint-staged:prettier",
        "git add"
      ],
      "*.js": [
        "npm run lint-staged:eslint",
        "npm run lint-staged:prettier",
        "git add"
      ]
    },
    "ignore": [
      "/build/",
      "/cypress/",
      "**/__tests__/",
      "**/__mocks__/*"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": {
    "evergreen": [
      "defaults"
    ],
    "legacy": [
      "ie 11"
    ]
  },
  "engines": {
    "node": ">=8.10"
  },
  "dependencies": {
    "@fpcc/fv-flash-cards-pdf": "~1.0.1",
    "@fpcc/fv-game-colouring-book": "~1.0.1",
    "@fpcc/fv-game-jigsaw": "~1.0.1",
