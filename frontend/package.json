{
  "name": "fv-web-ui",
  "version": "0.1.0",
  "description": "A React.js Nuxeo front-end for the FirstVoices Dictionary.",
  "repository": "https://github.com/First-Peoples-Cultural-Council/fv-web-ui",
  "license": "Apache-2.0",
  "scripts": {
    "build:production": "npm run production && npm run production:legacy",
    "cy:trashCopy": "npx trash cypress/integration/__cypress__/* !cypress/integration/__cypress__/__README__.js",
    "cy:copy": "npx copyfiles -e ./app/qa/__cypress__/common/*.js ./app/qa/__cypress__/*.js cypress/integration/__cypress__ -f",
    "cy:open": "npm run cy:trashCopy && npm run cy:copy && cypress open --browser chrome",
    "cy:run": "npm run cy:trashCopy && npm run cy:copy && cypress run --headless --browser chrome --record true --tag \"local\"",
    "cy:run:debug": "npm run cy:trashCopy && npm run cy:copy && DEBUG=cypress:* cypress run --headless --browser chrome --record false",
    "cy:run:ci:schedule": "npm run cy:trashCopy && npm run cy:copy && cypress run --headless --browser chrome --record true --tag \"master, schedule\"",
    "cy:run:ci:pr": "npm run cy:trashCopy && npm run cy:copy && cypress run --headless --browser chrome --record true --tag \"pull request\"",
    "development": "webpack --color --progress --mode development --config build/webpack.development.js",
    "initialSetup": "bash ../docker/initialsetup.sh",
    "lint-staged:eslint": "npx eslint --config .eslintrc --fix",
    "lint-staged:prettier": "npx prettier --config .prettierrc --write",
    "production": "webpack --color --progress --config build/webpack.production.js",
    "serve:production": "cp app/assets/server.js public/evergreen/server.js; node public/evergreen/server.js",
    "production:serve": "webpack serve --color --progress --config build/webpack.production.js",
    "production:legacy": "webpack --color --progress --env legacy --config build/webpack.production.js",
    "start": "webpack serve --env V2_URL=http://0.0.0.0:3002 --color --progress --config build/webpack.development.js",
    "startPreprod": "npm run start -- --env NUXEO_URL=\"https://preprod.firstvoices.com/nuxeo/\"  --env CONTEXT_PATH=\"\"",
    "startDev": "npm run start -- --env NUXEO_URL=\"https://dev.firstvoices.com/nuxeo/\"  --env CONTEXT_PATH=\"\"",
    "startInSkaffold": "webpack serve --progress --config build/webpack.skaffold.js",
    "test:mockDataSetup:local": "bash ./cypress/scripts/mockDataSetup.sh http://127.0.0.1:8080",
    "test:mockDataTeardown:local": "bash ./cypress/scripts/mockDataTeardown.sh http://127.0.0.1:8080",
    "test:mockDataSetup:dev": "bash ./cypress/scripts/mockDataSetup.sh https://dev.firstvoices.com",
    "test:e2e:local": "npm run test:mockDataSetup:local && start-server-and-test start http://127.0.0.1:3001 cy:open",
    "test:e2e:local:headless": "npm run test:mockDataSetup:local && start-server-and-test start http://127.0.0.1:3001 cy:run",
    "test:e2e:local:headless:debug": "npm run test:mockDataSetup:local && start-server-and-test start http://127.0.0.1:3001 cy:run:debug",
    "temp": "start-server-and-test start http://127.0.0.1:3001 cy:open",
    "docs": "npx jsdoc --destination qa/Documentation app/assets/javascripts/components/**/*.js",
    "test": "jest"
  },
  "lint-staged": {
    "*.{json,css,md}": [
      "npm run lint-staged:prettier",
      "git add"
    ],
    "*.js": [
      "npm run lint-staged:eslint",
      "npm run lint-staged:prettier",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": {
    "evergreen": [
      "defaults"
    ],
    "legacy": [
      "ie 11"
    ]
  },
  "engines": {
    "node": ">=13.12.0"
  },
  "dependencies": {
    "@fpcc/fv-game-jigsaw": "1.0.1",
    "@fpcc/fv-game-memory": "1.0.0",
    "@fpcc/fv-game-wordsearch": "1.0.0",
    "@material-ui/core": "^4.11.3",
    "@material-ui/icons": "^4.11.2",
    "@sentry/react": "^5.29.2",
    "babel-jest": "^26.6.3",
    "babel-runtime": "^6.26.0",
    "browserify-zlib": "^0.2.0",
    "browserslist-useragent": "^3.0.3",
    "classnames": "^2.2.6",
    "crypto-browserify": "^3.12.0",
    "debounce": "^1.2.0",
    "dompurify": "^2.2.6",
    "https-browserify": "^1.0.0",
    "immutable": "^3.8.2",
    "ky": "^0.26.0",
    "material-table": "^1.69.2",
    "memoize-one": "^5.1.1",
    "money-clip": "^3.0.2",
    "normalize.css": "~3.0.3",
    "nuxeo": "^3.17.0",
    "path-browserify": "^1.0.1",
    "phaser-ce": "^2.16.1",
    "react": "^17.0.1",
    "react-autosuggest": "^10.0.4",
    "react-device-detect": "^1.14.0",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-material-ui-carousel": "^2.1.2",
    "react-media": "^1.10.0",
    "react-paginate": "^6.5.0",
    "react-photo-gallery": "^8.0.0",
    "react-quill": "^1.3.5",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "selectn": "^1.1.2",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.1.1",
    "tcomb-form": "^0.9.21",
    "underscore": "^1.12.0",
    "yup": "^0.32.8"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/eslint-parser": "^7.14.7",
    "@babel/eslint-plugin": "^7.14.5",
    "@babel/parser": "^7.14.7",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-react": "^7.14.5",
    "@testing-library/cypress": "^7.0.3",
    "@testing-library/dom": "^7.29.1",
    "@testing-library/react": "^11.2.3",
    "babel-loader": "^8.2.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-react-jsx-location": "^0.2.0",
    "case-sensitive-paths-webpack-plugin": "^2.3.0",
    "circular-dependency-plugin": "^5.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "compression": "^1.7.4",
    "copy-webpack-plugin": "^7.0.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^5.0.1",
    "cypress": "^6.2.0",
