    "react-tap-event-plugin": "~0.2.0",
    "redux": "~3.5.2",
    "redux-logger": "~2.6.1",
    "redux-thunk": "~2.0.1",
    "request": "~2.88.0",
    "require-dir": "~1.0.0",
